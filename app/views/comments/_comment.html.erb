<div class="row">
  <div class="span8">
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%=  markdown comment.body %>
          </h4>
          <small>
            submitted <%= time_ago_in_words(comment.created_at) %> ago by 
            <%= comment.user.name %><br/>
            <% if can? :destroy, comment %>
        |     <%= link_to "Delete", [@topic, @post, comment], method: :delete %>
            <% end %> 
          </small>
        </div>
      </div>
  </div>
  </div>

  <%= content_tag :div, class: 'media', id: "comment-#{comment.id}" do %>
  <%= link_to '#', class: 'pull-left' do %>
    <%= image_tag(comment.user.avatar.small.url) if comment.user.avatar? %>
  <% end %>
  <div class="media-body">
    <small>
      <%= comment.user.name %> commented <%= time_ago_in_words(comment.created_at) %> ago
      <% if can? :destroy, comment %>
        | <%= link_to "Delete", [@topic, @post, comment], method: :delete %>
      <% end %>
    </small>
    <p><%= comment.body %></p>
  </div>
<% end %>

  <br>
  <br>
  <br>